# SpotDL API Environment Configuration

# Server Configuration
PORT=8000
HOST=0.0.0.0

# Worker Configuration (adjust based on CPU cores)
# Recommended: 2 * CPU_CORES + 1
WORKERS=4

# Performance Settings
# Max concurrent connections
LIMIT_CONCURRENCY=100

# Connection backlog
BACKLOG=2048

# Cache Settings
# Cache TTL in seconds (default: 1 hour)
CACHE_TTL=3600

# spotDL Configuration
# Number of threads for single track downloads
SPOTDL_THREADS_SINGLE=4

# Number of threads for playlist downloads
SPOTDL_THREADS_PLAYLIST=8

# Download timeout in seconds
DOWNLOAD_TIMEOUT=120

# File Cleanup
# Cleanup interval in seconds (default: 5 minutes)
CLEANUP_INTERVAL=300

# Temporary file TTL in seconds (default: 1 hour)
TEMP_FILE_TTL=3600

# Optional: External Services
# Uncomment and configure if using Redis
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=
# REDIS_DB=0

# Optional: S3/CDN Configuration
# Uncomment if uploading to S3
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_BUCKET_NAME=
# AWS_REGION=us-east-1

# Logging
LOG_LEVEL=INFO
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL

# Security (for production)
# CORS_ORIGINS=https://yourdomain.com,https://app.yourdomain.com
# API_KEY_REQUIRED=false
# API_KEY=your-secret-key-here

# Rate Limiting (requests per minute)
# RATE_LIMIT_PER_MINUTE=60
